<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="actionMenuTextColor">#ffffff</item>

        //沉浸状态栏
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowTranslucentStatus" tools:targetApi="kitkat">true</item>

        //ActionBarDrawerToggle设置颜色
        <item name="colorControlNormal">@android:color/white</item>
        <!--自定义颜色-->
        <item name="clockBackground">@android:color/white</item>
        <item name="clockTextColor">@android:color/black</item>
        <item name="settingBgColor">#EEEEEE</item>
        <item name="settingTextColor">@color/settingtext_day</item>
        <item name="cardBgColor">#ffffff</item>
        <item name="icon_cache">@mipmap/ic_cache</item>
        <item name="icon_clear">@mipmap/ic_clear</item>
        <item name="icon_feedback">@mipmap/ic_feedback</item>
        <item name="icon_image">@mipmap/ic_image</item>
        <item name="icon_night">@mipmap/ic_night</item>
        <item name="icon_update">@mipmap/ic_update</item>
    </style>

    <style name="TextAppearance.ExpandedTitle"
           parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textSize">26sp</item>
    </style>

    <style name="SplashTheme" parent="AppTheme">
        <item name="android:windowBackground">@drawable/splash_bg</item>
        <item name="android:windowIsTranslucent">false</item>
    </style>

    <!--加载框-->
    <style name="Request_Dialog" parent="@style/Theme.AppCompat.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <!--是否模糊-->
        <item name="android:backgroundDimEnabled">false</item>


    </style>

    <style name="BaseTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="actionMenuTextColor">#ffffff</item>

        //沉浸状态栏
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowTranslucentStatus" tools:targetApi="kitkat">true</item>

        //ActionBarDrawerToggle设置颜色
        <item name="colorControlNormal">@android:color/white</item>
    </style>

    <!--白天主题-->
    <style name="DayTheme" parent="BaseTheme">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="clockBackground">@android:color/white</item>
        <item name="clockTextColor">@android:color/black</item>
        <item name="settingBgColor">@color/settingbg_day</item>
        <item name="cardBgColor">#ffffff</item>
        <item name="settingTextColor">@color/settingtext_day</item>

        <item name="icon_cache">@mipmap/ic_cache</item>
        <item name="icon_clear">@mipmap/ic_clear</item>
        <item name="icon_feedback">@mipmap/ic_feedback</item>
        <item name="icon_image">@mipmap/ic_image</item>
        <item name="icon_night">@mipmap/ic_night</item>
        <item name="icon_update">@mipmap/ic_update</item>
    </style>

    <!--夜间主题-->
    <style name="NightTheme" parent="BaseTheme">
        <item name="colorPrimary">@color/color3F3F3F</item>
        <item name="colorPrimaryDark">@color/color3A3A3A</item>
        <item name="colorAccent">@color/color868686</item>
        <item name="clockBackground">@color/color3F3F3F</item>
        <item name="clockTextColor">@color/color8A9599</item>
        <item name="settingBgColor">@color/settingbg_night</item>
        <item name="cardBgColor">@color/color3F3F3F</item>
        <item name="settingTextColor">@color/settingtext_night</item>

        <item name="icon_cache">@mipmap/ic_cache_night</item>
        <item name="icon_clear">@mipmap/ic_clear_night</item>
        <item name="icon_feedback">@mipmap/ic_feedback_night</item>
        <item name="icon_image">@mipmap/ic_image_night</item>
        <item name="icon_night">@mipmap/ic_night_night</item>
        <item name="icon_update">@mipmap/ic_update_night</item>
    </style>
</resources>
